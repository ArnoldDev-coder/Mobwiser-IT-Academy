{% extends 'layout.twig' %}
{% block body %}
    <div class="col-md-12" style="padding-left: 10rem; padding-right: 15rem">
        {% if flash('error') %}
            <div class="alert alert-danger">
                {{ flash('error') }}
            </div>
        {% endif %}
        {% if flash('success') %}
            <div class="alert alert-success">
                {{ flash('success') }}
            </div>
        {% endif %}
        {% set token = csrf_input() %}
            <form action="{{ path('contact') }}" method="post">
                {{ field('name', null, 'Votre nom') }}
                {{ field('email', null, 'Votre email') }}
                {{ field('content', null, 'Message', {type: 'textarea'}) }}
                <button class="btn btn-primary">
                    Envoyez
                    {{ token | raw }}
                </button>
            </form>
    </div>
{% endblock %}